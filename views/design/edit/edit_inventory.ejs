<!DOCTYPE html>
<html lang="en">

<%- include("../style.ejs") %>
<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
  
    <!-- partial -->

    <%- include("../head1.ejs") %>
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
     
      <!-- partial -->
     
      <%- include("../sidebar") %>
     
      <div class="main-panel">
        <div class="content-wrapper">
          <form method="POST" enctype="multipart/form-data">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Increment Quantity</h4>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                      <label for="exampleDate2">Price</label>
                      <input type="number" class="form-control" id="exampleDate2" placeholder="Total Price" onblur="check()" value="" name="price" required>
                    </div> 

                    <div class="form-group">
                      <label for="exampleInputEmail3">Quantity</label>
                      <input type="number" class="form-control" id="exampleInputEmail3" placeholder="Add Quantity" onblur="check1()" value="" name="quantity" required>
                    </div>

                    <div class="form-group">
                      <input type="submit" class="form-control" name="submit" value="Submit" style="font-weight: bold; background-color:azure;">
                    </div>

        </div>        
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
       <%- include("../footer") %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    </form>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
</div>
  <!-- plugins:js -->
  </body>
  <script>
    function check1(){
     
      const id=document.getElementById('exampleInputEmail3')
     
      if(parseInt(id.value)<=0)
      {
        alert("Quantity must be positive and more than 0")
        id.value=""
      }
    }
    function check(){
     
     const id=document.getElementById('exampleDate2')
    
     if(parseInt(id.value)<0)
     {
       alert("Amount must be positive")
       id.value=""
     }
   }
  </script>

</html>

