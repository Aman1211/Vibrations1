
<!DOCTYPE html>
<html lang="en">

<%- include("../style.ejs") %>
<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
  
    <!-- partial -->

    <%- include("../head1.ejs") %>
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
     
      <!-- partial -->
     
      <%- include("../sidebar") %>
     
      <div class="main-panel">
        <div class="content-wrapper">


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Request_Status</h4>
        
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>
                  Date
                </th>
                <th>
                Amount
                </th>
                <th>
                 Status
                </th>
              
              </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < info.length ; i++) { %>
                
         
              <tr>
                <td class="py-1">
                  <%=info[i].request.dt %>
                </td>  
                    
                <td>
                    <%=info[i].request.amt %>
                </td>
                <td>
                    <% if(info[i].request.req_status==0) {%>
                    <a class="btn btn-info" href="">Rejected</a>
                    <% } else if(info[i].request.req_status==1) { %>
                    <a class="btn btn-info" href="">Pending</a>
                    <% } else { %>
                     <a class="btn btn-info" href="">Accepted</a>
                     <% } %>

                </td>
                
              </tr>
              <% }%>
            </tbody>
          </table>
        </div>
        <div style="padding-top:5px;margin-left: 3px;">
            <% let k=1 %>
            <%  for(let i=1 ; i <= count.length; i=i+5) { %>
               
              <a class="btn btn-info" href="/request_Status?page=<%=k %>"><%= k %></a>
              <% k++ %>
              <% } %>
          </div>
      </div>
    </div>
  </div>
  <%- include("../footer") %>
  </div>
  </div>
</div>
</div>
</body>
</html>